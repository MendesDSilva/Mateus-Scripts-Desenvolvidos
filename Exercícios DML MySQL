SELECT * FROM ALUNOS 
ORDER BY NUMERO; /* ORDENA PELA COLUNA NUMERO */ 

SELECT * FROM ALUNOS 
ORDER BY 1; /* ORDENA PELA COLUNA 1 */ 

SELECT * FROM ALUNOS
ORDER BY NOME, NUMERO;

SELECT NOME 
FROM ALUNOS 
ORDER BY NOME, NUMERO;

SELECT * FROM ALUNOS 
ORDER BY NUMERO ASC ; /* ORDENA ASCENDENDO */

SELECT * FROM ALUNOS 
ORDER BY NUMERO DESC ; /* ORDENA DESCENDENDO */
